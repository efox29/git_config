[user]
	name = Enrico Perera
	email = reperera@gmail.com

[diff]
	tool = bc
[difftool "bc"]
	trustExitCode = true
[core]
	editor = vim
[merge]
	tool = bc
[mergetool "bc"]
	trustExitCode = true

[alias]
	co = checkout
	ec = config --global -e
	cob = checkout -b
	st = status
	mnob = merge --ff-only
	myesb = merge --no-ff
	cam = commit -am
	ri = rebase -i
	ap = add -p
